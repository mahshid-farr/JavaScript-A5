<div class="row">
    {{#if departments}}
        <div class="col-md-12">
            <br>
            <h2>Departments</h2>
            <hr/>
            <div class="table-responsive">
                <table class="table ">
                    <thead>
                    <tr>
                        <th>department Number</th>
                        <th>department Name</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each departments }}
                        <tr>
                            <td><a href="/department/{{departmentId}}">{{ departmentId }}</a></td>
                            <td><a href="/employees?department={{departmentId}}">{{ departmentName }}</a></td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>

            </div>
        </div>
    {{/if}}

    {{#unless departments }}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>